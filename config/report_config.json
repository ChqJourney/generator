{
  "template_path": "report_templates/report_template1.docx",
  "output_dir": "output/",
  "field_mappings": [
    {
      "template_field": "report_no",
      "source": "metadata",
      "source_field": "report_no",
      "type": "text"
    },
    {
      "template_field": "issue_date",
      "source": "metadata",
      "source_field": "issue_date",
      "type": "text"
    },
    {
      "template_field": "model_identifier",
      "source": "extracted_data",
      "source_field": "model_identifier",
      "type": "text"
    },
    {
      "template_field": "rated_wattage",
      "source": "extracted_data",
      "source_field": "rated_wattage",
      "type": "text"
    },
    {
      "template_field": "photometric_data",
      "source": "extracted_data",
      "source_field": "photometric_data",
      "type": "table",
      "headers": [
        { "name": "Current", "type": "copy", "digit": 4 },
        { "name": "Power", "type": "copy", "digit": 2 },
        { "name": "PF", "type": "copy", "digit": 4 },
        { "name": "Total Luminous Flux", "type": "copy", "digit": 1 },
        {
          "name": "Efficacy",
          "type": "calculate",
          "formula": "=B{row}/A{row}*1000"
        },
        { "name": "CCT", "type": "copy", "digit": 0 },
        { "name": "Ra", "type": "copy", "digit": 0 },
        { "name": "R9", "type": "copy", "digit": 0 },
        { "name": "X", "type": "copy", "digit": 4 },
        { "name": "Y", "type": "copy", "digit": 4 },
        { "name": "SDCM", "type": "copy", "digit": 0 },
        { "name": "Flicker Pst LM", "type": "copy", "digit": 4 },
        { "name": "Stroboscopic Effect SVM", "type": "copy", "digit": 4 },
        { "name": "Standby Power Psb", "type": "copy", "digit": 2 }
      ],
      "table_template_path": "report_templates/tables/photometric_table_template.docx",
      "offset_x": 3,
      "offset_y": 3
    },
    {
      "template_field": "images",
      "source": "extracted_data",
      "source_field": "images",
      "type": "image",
      "width": 4.0,
      "alignment": "center"
    }
  ],
  "merge_strategy": "prefer_first"
}
